rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User darf nur seine eigenen Daten unter 'players' lesen/schreiben
    match /players/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Gilt auch f√ºr alle Unter-Sammlungen (z.B. history)
      match /{document=**} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}